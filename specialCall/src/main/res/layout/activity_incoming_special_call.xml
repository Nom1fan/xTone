<MediaController xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ui.activities.IncomingSpecialCall"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/CallerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:minHeight="500dp"
        android:minWidth="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/IncomingCallNumber"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:text="TextView is ONLINE !!!!"
        android:singleLine="false"
        android:background="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom" />



</MediaController>
