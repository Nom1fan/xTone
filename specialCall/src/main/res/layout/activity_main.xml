<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="15dip" >         
    
    <com.special.specialcall.MyProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"      
        android:text="@+id/TextView01" />    

    <ImageButton
        android:id="@+id/Select_Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CallNumber"
        android:layout_toRightOf="@+id/MyRing"
        android:contentDescription="contacts"
        android:src="@drawable/iphonecontacts"      
        android:textSize="18sp" />

    <TextView
        android:id="@+id/destName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CallNow"
        android:layout_alignRight="@+id/CallNumber"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/MyRing"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/Select_Contact"
        android:layout_alignLeft="@+id/MyPic"
        android:layout_alignRight="@+id/MyPic"
        android:enabled="true"        
        android:layout_marginBottom="14dp"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/MyPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MyRing"
        android:layout_centerHorizontal="true"
        android:contentDescription="mypic"
        android:clickable="true"
        android:src="@drawable/defaultpic_enabled"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/CallNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/destName"
        android:layout_alignRight="@+id/CallNow"
        android:ems="10"
        android:enabled="true"
        android:hint="Destination number"
        android:inputType="number"
        android:focusable="false"
        android:phoneNumber="true"
        android:maxLength="10"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/CallNow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/settingsBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/settings" />

</RelativeLayout>