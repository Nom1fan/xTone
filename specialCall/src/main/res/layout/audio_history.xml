<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#004559">

   <ListView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:dividerHeight="10.0sp"
       android:id="@+id/lv"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="false"
       android:clickable="false"
       android:background="#004559"
       android:layout_alignParentTop="true"
       android:layout_above="@+id/audio_upload_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:id="@+id/audio_upload_btn"
        android:layout_gravity="bottom|right"
        android:visibility="visible"
        android:src="@drawable/upload_preview_anim"
        android:background="#004559"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/audio_upload_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/audio_cancel_btn"
        android:visibility="visible"
        android:src="@drawable/return_preview_anim"
        android:background="#004559"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/audio_cancel_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_play_pause_btn"
        android:layout_gravity="bottom|right"
        android:visibility="visible"
        android:src="@drawable/play_preview_anim"
        android:background="#004559"
        android:cropToPadding="true"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/upload"
        android:gravity="center"
        android:id="@+id/audio_upload_tv"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/audio_upload_btn"
        android:layout_alignEnd="@+id/audio_upload_btn"
        android:layout_alignLeft="@+id/audio_upload_btn"
        android:layout_alignStart="@+id/audio_upload_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cancel"
        android:gravity="center"
        android:id="@+id/audio_cancel_tv"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/audio_cancel_btn"
        android:layout_alignStart="@+id/audio_cancel_btn"
        android:layout_alignRight="@+id/audio_cancel_btn"
        android:layout_alignEnd="@+id/audio_cancel_btn" />

</RelativeLayout>

