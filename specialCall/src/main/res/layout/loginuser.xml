<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/GetSMSCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get SMS Code"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/SMSCodeEditText"
        android:layout_marginBottom="20dp" />
        

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="login" />

    <EditText
        android:id="@+id/SMSCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:ems="10"
        android:hint="SMS code you received"
        android:maxLength="4"
        android:inputType="number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/LoginNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GetSMSCode"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:maxLength="10"
        android:hint="Your phone number"
        android:inputType="number"
        android:phoneNumber="true"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Initializing..."
        android:id="@+id/initTextView"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/initProgressBar"
        android:layout_toEndOf="@+id/initProgressBar"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/initProgressBar"
        android:layout_alignBottom="@+id/initTextView"
        android:layout_toLeftOf="@+id/login_btn"
        android:layout_toStartOf="@+id/login_btn" />

</RelativeLayout>
