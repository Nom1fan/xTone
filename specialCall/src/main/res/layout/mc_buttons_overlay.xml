<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_title_background"
        android:layout_alignTop="@+id/block_mc"
        android:background="#72007ea4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/block_mc" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_background"
        android:background="#72007ea4"
        android:layout_alignParentBottom="false"
        android:layout_toStartOf="@+id/volume_up"
        android:layout_alignTop="@+id/mc_mute_unmute"
        android:layout_alignBottom="@+id/mc_mute_unmute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/block_mc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/hide"
        android:background="@drawable/block_anim"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/mc_mute_unmute"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/unmute_speaker_anim"
        android:contentDescription="@string/hide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/volume_down"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/window_icon"
        android:background="@drawable/volume_down_anim"
        android:layout_toLeftOf="@+id/volume_value"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/volume_up"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/volume_up_anim"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_toRightOf="@+id/volume_value" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vol"
        android:id="@+id/volume_value"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#80ffffff"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/mc_mute_unmute"
        android:layout_alignBottom="@+id/mc_mute_unmute"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/block"
        android:id="@+id/block_textview"
        android:layout_toRightOf="@+id/block_mc"
        android:textColor="#80ff0000"
        android:textSize="15dp"
        android:background="#80ffffff"
        android:layout_alignBottom="@+id/name_title_background"
        android:layout_alignTop="@+id/name_title_background"
        android:gravity="center_vertical|center_horizontal" />


</RelativeLayout>