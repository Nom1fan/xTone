<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainSelectMedia"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004559">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/media_type"
        android:id="@+id/selectMediaType"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/mc_icon"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/contact_name_or_number"
        android:id="@+id/contactNameOrNumber"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_image"
        android:src="@drawable/selectmedia_btn_anim"
        android:id="@+id/selectVideo"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/selectMediaType" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_video"
        android:src="@drawable/record_video_anim"
        android:id="@+id/recordVideo"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/takePicture"
        android:layout_alignRight="@+id/audio"
        android:layout_alignEnd="@+id/audio"
        android:layout_alignLeft="@+id/audio"
        android:layout_alignStart="@+id/audio"
        android:background="#00ffffff"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio"
        android:src="@drawable/select_audio_anim"
        android:id="@+id/audio"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/image_video_textview"
        android:background="#00ffffff"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/selectMediaType"
        android:layout_toLeftOf="@+id/mc_icon"
        android:layout_toEndOf="@+id/mc_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_picture"
        android:src="@drawable/take_picture_anim"
        android:id="@+id/takePicture"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/audio"
        android:layout_alignLeft="@+id/recordVideo"
        android:layout_alignStart="@+id/recordVideo"
        android:layout_alignRight="@+id/audio"
        android:layout_alignEnd="@+id/audio"
        android:background="#00ffffff"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_audio"
        android:id="@+id/recordAudio"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/record_audio_anim"
        android:layout_below="@+id/recordVideo"
        android:background="#00ffffff"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/mc_icon"
        android:layout_alignLeft="@+id/recordVideo"
        android:layout_alignEnd="@+id/recordVideo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/middle"
        android:layout_above="@+id/selectMediaType"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mediacallz_gallery"
        android:id="@+id/mediacallzBtn"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/recordAudio"
        android:layout_alignLeft="@+id/recordAudio"
        android:layout_alignStart="@+id/recordAudio"
        android:layout_alignRight="@+id/recordAudio"
        android:layout_alignEnd="@+id/recordAudio"
        android:src="@drawable/library_anim"
        android:textColor="#fffb02"
        android:textStyle="bold"
        android:background="#00ffffff"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="false" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mc_icon"
        android:src="@drawable/select_profile_media_enabled"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/video_image"
        android:id="@+id/image_video_textview"
        android:layout_alignTop="@+id/selectVideo"
        android:layout_alignBottom="@+id/selectVideo"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@id/selectVideo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/audio"
        android:id="@+id/audio_textview"
        android:textSize="30dp"
        android:layout_alignTop="@+id/audio"
        android:layout_alignBottom="@+id/audio"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/image_video_textview"
        android:layout_alignRight="@+id/image_video_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/record_video"
        android:id="@+id/record_video_textview"
        android:textSize="30dp"
        android:layout_alignTop="@+id/recordVideo"
        android:layout_alignBottom="@+id/recordVideo"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/audio_textview"
        android:layout_alignStart="@+id/audio_textview"
        android:layout_alignRight="@+id/audio_textview"
        android:layout_alignEnd="@+id/audio_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/take_picture"
        android:id="@+id/take_picture_textview"
        android:textSize="30dp"
        android:layout_alignTop="@+id/takePicture"
        android:layout_alignBottom="@+id/takePicture"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/record_video_textview"
        android:layout_alignStart="@+id/record_video_textview"
        android:layout_alignRight="@+id/record_video_textview"
        android:layout_alignEnd="@+id/record_video_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/record_audio"
        android:id="@+id/record_audio_textview"
        android:textSize="30dp"
        android:layout_alignTop="@+id/recordAudio"
        android:layout_alignBottom="@+id/recordAudio"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/take_picture_textview"
        android:layout_alignStart="@+id/take_picture_textview"
        android:layout_alignRight="@+id/take_picture_textview"
        android:layout_alignEnd="@+id/take_picture_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mediacallz_gallery"
        android:id="@+id/mc_gallery_textview"
        android:textSize="30dp"
        android:layout_alignTop="@+id/mediacallzBtn"
        android:layout_alignBottom="@+id/mediacallzBtn"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/record_audio_textview"
        android:layout_alignStart="@+id/record_audio_textview"
        android:layout_alignRight="@+id/record_audio_textview"
        android:layout_alignEnd="@+id/record_audio_textview" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_image"
        android:src="@drawable/select_image_anim"
        android:id="@+id/selectImage"
        android:layout_gravity="center_vertical"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/image_video_textview"
        android:layout_toRightOf="@+id/audio_textview"
        android:layout_toStartOf="@+id/audio_textview" />

</RelativeLayout>